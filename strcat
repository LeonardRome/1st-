#include <iostream>
#include <cstring>
using namespace std;

int main() {

    char str1[100];
    char str2[100];
    cout << "*****************\n";
    cout << "STRING CONCATENATION\n";
    cout << "*****************\n";
    cout << "Enter a first word (str1): ";
    cin >> str1;
    cout << "\nEnter a second word (str2): ";
    cin >> str2;

    strcat (str1,str2);

    cout << "new string value for str1: " << str1 << endl;

    return 0;
}
