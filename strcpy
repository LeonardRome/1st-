#include <iostream>
#include <cstring>
using namespace std;

int main() {

    char str1[50];
    char str2[50];
    cout << "*****************\n";
    cout << "STRING COPY\n";
    cout << "*****************\n";
    cout << "Enter a first word (str1): ";
    cin >> str1;
    cout << "\nEnter a second word (str2): ";
    cin >> str2;

    strcpy (str1,str2);

    cout << "new string value for str1: " << str1 << endl;

    return 0;
}
