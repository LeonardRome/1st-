#include <iostream>
using namespace std;

int main (){
int month;
int day;


cout << "Enter month: ";
cin >> month;
cout << "Enter day: ";
cin >> day;

string months[] = {"Invalid", "January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December"};

if (month == 1 && day >= 20 && day <= 31 || month == 2 && day <= 18 && day >= 1)
    cout << "Zodiac sign for " << months[month] << " " << day << " is Aquarius";

else if (month == 2 && day >= 19 && day <=29 || month == 3 && day <= 20 && day >= 1)
    cout << "Zodiac sign for " << months[month] << " " << day << " is Pisces";

else if (month == 3 && day >= 21 && day <=31 || month == 4 && day <= 19 && day >= 1)
    cout << "Zodiac sign for " << months[month] << " " << day << " is Aries";

else if (month == 4 && day >= 20 && day <=30 || month == 5 && day <= 20 && day >= 1)
    cout << "Zodiac sign for " << months[month] << " " << day << " is Taurus";

else if (month == 5 && day >= 21 && day <=31 || month == 6 && day <= 20 && day >= 1)
    cout << "Zodiac sign for " << months[month] << " " << day << " is Gemini";

else if (month == 6 && day >= 21 && day <=30 || month == 7 && day <= 22 && day >= 1)
    cout << "Zodiac sign for " << months[month] << " " << day << " is Cancer";

else if (month == 7 && day >= 23 && day <=31 || month == 8 && day <= 22 && day >= 1)
    cout << "Zodiac sign for " << months[month] << " " << day << " is Leo";

else if (month == 8 && day >= 23 && day <=31 || month == 9 && day <= 22 && day >= 1)
    cout << "Zodiac sign for " << months[month] << " " << day << " is Virgo";

else if (month == 9 && day >= 23 && day <=30 || month == 10 && day <= 22 && day >= 1)
    cout << "Zodiac sign for " << months[month] << " " << day << " is Libra";

else if (month == 10 && day >= 23 && day <=31 || month == 11 && day <= 21 && day >= 1)
    cout << "Zodiac sign for " << months[month] << " " << day << " is Scorpio";

else if (month == 11 && day >= 22 && day <=30 || month == 12 && day <= 21 && day >= 1)
    cout << "Zodiac sign for " << months[month] << " " << day << " is Sagittarius";

else if (month == 12 && day >= 22 && day <=31 || month == 1 && day <= 19 && day >= 1)
    cout << "Zodiac sign for " << months[month] << " " << day << " is Capricorn";

else
    cout << "Invalid Input" << endl;

    return 0;
}
